<article class="video_category">
	<% @categories.each do |category| %>
	  <header>
	  	<h3><%= category.name  %></h3>
	  </header>
	  <div class="videos row">
	  	<% category.recent_videos.each do |video| %>
	  	  <div class="video col-sm-2">
	  	  	<%=link_to video_path(video) do %>
	  	  	  <%= image_tag(video.cover_image_url) %>
	  	  	<% end %>
	  	  </div>
	  	<% end %>
	  </div>
	<% end %>
</article>